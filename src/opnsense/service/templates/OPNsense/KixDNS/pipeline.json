{
    "version": "1.0",
    "settings": {
        "bind_udp": "{{ kixdns.general.bind_udp }}",
        "bind_tcp": "{{ kixdns.general.bind_tcp }}",
        "default_upstream": "{{ kixdns.general.default_upstream }}",
        "upstream_timeout_ms": {{ kixdns.general.upstream_timeout }},
        "min_ttl": {{ kixdns.general.min_ttl }},
        "udp_workers": {{ kixdns.general.udp_workers }}
    },
    "pipelines": [
{% if helpers.exists('kixdns.pipelines.pipeline') %}
    {% for pipe in helpers.toList('kixdns.pipelines.pipeline') %}
        {
            "id": "{{ pipe.id }}",
            "rules": [
        {% if helpers.exists('kixdns.rules.rule') %}
            {% for rule in helpers.toList('kixdns.rules.rule') %}
                {% if rule.pipeline_id == pipe.id and rule.enabled == '1' %}
                {
                    "name": "{{ rule.name }}",
                    "matchers": {{ rule.matchers | default('[]') }},
                    "matcher_operator": "{{ rule.matcher_operator }}",
                    "actions": {{ rule.actions | default('[]') }},
                    "response_matchers": {{ rule.response_matchers | default('[]') }}
                },
                {% endif %}
            {% endfor %}
        {% endif %}
            ]
        },
    {% endfor %}
{% endif %}
    ],
    "pipeline_select": [
{% if helpers.exists('kixdns.selectors.selector') %}
    {% for sel in helpers.toList('kixdns.selectors.selector') %}
        {
            "pipeline": "{{ sel.target_pipeline }}",
            "matchers": {{ sel.matchers | default('[]') }},
            "matcher_operator": "{{ sel.operator }}"
        },
    {% endfor %}
{% endif %}
    ]
}

