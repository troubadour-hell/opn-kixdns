<model>
    <mount>//OPNsense/kixdns</mount>
    <description>KixDNS Configuration</description>
    <items>
        <general>
            <enabled type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </enabled>
            <listener_label type="TextField">
                <default>default</default>
                <Required>Y</Required>
            </listener_label>
            <debug type="BooleanField">
                <default>0</default>
            </debug>
            <log_level type="OptionField">
                <default>info</default>
                <OptionValues>
                    <trace>Trace</trace>
                    <debug>Debug</debug>
                    <info>Info</info>
                    <warn>Warning</warn>
                    <error>Error</error>
                </OptionValues>
            </log_level>
            <!-- Full KixDNS pipeline JSON configuration, managed by the Pipeline Editor -->
            <config_json type="TextField">
                <Required>N</Required>
                <default></default>
            </config_json>
        </general>
    </items>
</model>
