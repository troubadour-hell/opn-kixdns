<form>
    <field>
        <id>general.enabled</id>
        <label>Enable KixDNS</label>
        <type>checkbox</type>
        <help>Enable the KixDNS service.</help>
    </field>
    <field>
        <id>general.listener_label</id>
        <label>Listener Label</label>
        <type>text</type>
        <help>Listener instance label for pipeline selection.</help>
    </field>
    <field>
        <id>general.debug</id>
        <label>Debug Logging</label>
        <type>checkbox</type>
        <help>Enable debug logging for the KixDNS process.</help>
    </field>
    <field>
        <id>general.log_level</id>
        <label>Log Level</label>
        <type>dropdown</type>
        <help>Select the logging verbosity level.</help>
    </field>
</form>
