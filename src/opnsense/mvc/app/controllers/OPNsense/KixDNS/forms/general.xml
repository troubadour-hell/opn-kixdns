<form>
    <field>
        <id>general.enabled</id>
        <label>Enable KixDNS</label>
        <type>checkbox</type>
        <help>Enable the KixDNS service.</help>
    </field>
    <field>
        <id>general.bind_udp</id>
        <label>Bind UDP</label>
        <type>text</type>
        <value>0.0.0.0:5353</value>
        <help>Address and port for UDP listener (e.g. 0.0.0.0:5353).</help>
    </field>
    <field>
        <id>general.bind_tcp</id>
        <label>Bind TCP</label>
        <type>text</type>
        <value>0.0.0.0:5353</value>
        <help>Address and port for TCP listener (e.g. 0.0.0.0:5353).</help>
    </field>
    <field>
        <id>general.default_upstream</id>
        <label>Default Upstream</label>
        <type>text</type>
        <value>127.0.0.1:53</value>
        <help>Default upstream DNS server (e.g. 1.1.1.1:53).</help>
    </field>
    <field>
        <id>general.upstream_timeout</id>
        <label>Upstream Timeout</label>
        <type>text</type>
        <value>2000</value>
        <help>Timeout in milliseconds.</help>
    </field>
    <field>
        <id>general.min_ttl</id>
        <label>Min TTL</label>
        <type>text</type>
        <value>0</value>
        <help>Minimum TTL in seconds.</help>
    </field>
    <field>
        <id>general.log_level</id>
        <label>Log Level</label>
        <type>dropdown</type>
        <help>Select the logging verbosity.</help>
        <options>
            <option>
                <name>Trace</name>
                <value>trace</value>
            </option>
            <option>
                <name>Debug</name>
                <value>debug</value>
            </option>
            <option>
                <name>Info</name>
                <value>info</value>
            </option>
            <option>
                <name>Warning</name>
                <value>warn</value>
            </option>
            <option>
                <name>Error</name>
                <value>error</value>
            </option>
        </options>
        <!-- 默认选中 Info 级别，确保下拉框有初始值 -->
        <value>info</value>
    </field>
</form>


